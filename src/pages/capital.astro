                  <div class="column is-4 has-text-centered">
                    <div
                      class="mx-auto is-44x44 is-flex is-justify-content-center is-align-items-center is-circle bg-grey"
                    >
                      <i
                        class="iconify rem-175 text-primary"
                        data-icon="ph:path-duotone"></i>
                    </div>
                    <div class="py-2">
                      <h4 class="title is-6 is-leading">Minimal</h4>
                      <p class="mx-auto max-w-2 text-medium rem-90">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                      </p>
                    </div>
                  </div>
                  <!-- Feature -->
                  <div class="column is-4 has-text-centered">
                    <div
                      class="mx-auto is-44x44 is-flex is-justify-content-center is-align-items-center is-circle bg-grey"
                    >
                      <i
                        class="iconify rem-175 text-primary"
                        data-icon="ph:sparkle-duotone"></i>
                    </div>
                    <div class="py-2">
                      <h4 class="title is-6 is-leading">Efficient</h4>
                      <p class="mx-auto max-w-2 text-medium rem-90">
